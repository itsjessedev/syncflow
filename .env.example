# SyncFlow Configuration
# Copy to .env and fill in your values

# App Settings
DEMO_MODE=false
DEBUG=false

# Salesforce Configuration
SF_USERNAME=your-email@company.com
SF_PASSWORD=your-password
SF_SECURITY_TOKEN=your-security-token
SF_DOMAIN=login  # or 'test' for sandbox
SF_QUERY="SELECT Id, Name, Amount, StageName, CloseDate FROM Opportunity WHERE IsClosed = false"

# Jira Configuration
JIRA_URL=https://your-company.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your-api-token
JIRA_JQL="project = SALES AND status != Done ORDER BY created DESC"

# Google Sheets Configuration
GOOGLE_CREDENTIALS_FILE=credentials.json
GOOGLE_SPREADSHEET_ID=your-spreadsheet-id
GOOGLE_SHEET_NAME=Master Data

# Sync Schedule (cron format)
SYNC_SCHEDULE="0 7 * * *"  # Daily at 7 AM

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFY_EMAIL=alerts@company.com

# Conflict Resolution
# Options: salesforce_wins, jira_wins, most_recent, manual
CONFLICT_STRATEGY=salesforce_wins
